# Environment Variables Template
# Copy this to .env and fill in your actual values

# ===================================
# FIREBASE CONFIGURATION
# ===================================
# Get these from Firebase Console → Project Settings → General
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ===================================
# STRIPE CONFIGURATION (PRODUCTION)
# ===================================
# Get these from Stripe Dashboard → Developers → API Keys
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx

# Payment Links - Create in Stripe Dashboard → Payment Links
# Monthly Plan ($19/mo)
VITE_STRIPE_MONTHLY_LINK=https://buy.stripe.com/xxxxx

# Yearly Plan ($149/yr)
VITE_STRIPE_YEARLY_LINK=https://buy.stripe.com/xxxxx

# Lifetime Plan ($299 one-time)
VITE_STRIPE_LIFETIME_LINK=https://buy.stripe.com/xxxxx

# Customer Portal URL - Enable in Stripe Dashboard → Settings → Billing → Customer Portal
VITE_STRIPE_PORTAL_URL=https://billing.stripe.com/p/login/xxxxx

# ===================================
# STRIPE SERVER-SIDE (For Cloud Functions)
# ===================================
# DO NOT prefix with VITE_ - these are server-side only
# Set these in Firebase config: firebase functions:config:set stripe.secret_key="sk_live_xxxxx"
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ===================================
# ANALYTICS
# ===================================
# Google Analytics 4 Measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===================================
# APP CONFIGURATION
# ===================================
# App URL (for redirects, etc.)
VITE_APP_URL=https://yourdomain.com

# Environment (development, staging, production)
VITE_ENV=production
